<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>org.springframework.samples</groupId>
	<artifactId>spring-petclinic-db</artifactId>
	<name>Build/Deploy liquidbase for petclinic</name>
	<version>${platform.version}</version>

	<parent>
		<groupId>org.springframework.samples</groupId>
		<artifactId>spring-petclinic-parent</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>

	<properties>
		<liquidbase-modify-column>2.0.0</liquidbase-modify-column>
		<liquidbase-oracle.version>3.0.0</liquidbase-oracle.version>
		<mysql-connector-java.version>5.1.22</mysql-connector-java.version>
		<snakeyaml.version>1.13</snakeyaml.version>
	</properties>

	<profiles>
		<profile>
			<id>dbupdate-petclinic</id>
			<activation>
				<property>
					<name>update-petclinic-db</name>
					<value>true</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>properties-maven-plugin</artifactId>
					</plugin>
					<plugin>
						<groupId>org.liquibase</groupId>
						<artifactId>liquibase-maven-plugin</artifactId>
						<version>3.1.1</version>
						<executions>
							<execution>
								<id>petclinic</id>
								<phase>install</phase>
								<configuration>
									<changeLogFile>db.petclinic_changelog_master.yaml</changeLogFile>
									<driver>${jdbc.driver}</driver>
									<username>${jdbc.petclinic.username}</username>
									<password>${jdbc.petclinic.password}</password>
									<url>${jdbc.petclinic.url}${jdbc.petclinic.db}</url>
									<promptOnNonLocalDatabase>false</promptOnNonLocalDatabase>
									<migrationSqlOutputFile>${project.build.directory}/liquibase/petclinic_changelog.sql</migrationSqlOutputFile>
								</configuration>
								<goals>
									<goal>${liquibase.update}</goal>
								</goals>
							</execution>
						</executions>
						<dependencies>
							<dependency>
								<groupId>org.springframework.samples</groupId>
								<artifactId>petclinic-db</artifactId>
								<version>${platform.version}</version>
								<classifier>${db.classifier}</classifier>
							</dependency>
							<dependency>
								<groupId>org.liquibase.ext</groupId>
								<artifactId>modify-column</artifactId>
								<version>${liquidbase-modify-column.version}</version>
							</dependency>
							<dependency>
								<groupId>org.liquibase.ext</groupId>
								<artifactId>liquibase-oracle</artifactId>
								<version>${liquidbase-oracle.version}</version>
							</dependency>
							<dependency>
								<groupId>mysql</groupId>
								<artifactId>mysql-connector-java</artifactId>
								<version>${mysql-connector-java.version}</version>
							</dependency>
							<dependency>
								<groupId>org.yaml</groupId>
								<artifactId>snakeyaml</artifactId>
								<version>${snakeyaml.version}</version>
							</dependency>
						</dependencies>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>archive-target</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-resources-plugin</artifactId>
						<version>2.6</version>
						<inherited>false</inherited>
						<executions>
							<execution>
								<id>copy-resources</id>
								<phase>validate</phase>
								<goals>
									<goal>copy-resources</goal>
								</goals>
								<configuration>
									<outputDirectory>${basedir}/target-${platform.version}</outputDirectory>
									<resources>
										<resource>
											<directory>${basedir}/target</directory>
											<filtering>false</filtering> 
										</resource>
									</resources>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>